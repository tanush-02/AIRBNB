<% layout("/listings/layout/boilerplate.ejs") %>

<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    background-color: #fff;
    padding-left: 2rem;
  }
  .filter {
    display: flex;
    margin-right: 2rem;
    opacity: 0.7;
    text-align: center;
    flex-direction: column;
  }
  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }
  .filter p {
    font-size: 0.8rem;
  }
  .tax-info {
    display: none;
  }
</style>

<body>
  <div id="filters" class="navbar navbar-expand-lg bg-body-tertiary collapse navbar-collapse">
    <!-- Your filter icons here -->
  </div>

  <div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4 mt-3">
      <% for(let listing of allListings) { %>
      <div class="col">
        <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
          <div class="card h-100">
            <img src="<%= listing.image?.url || 'https://source.unsplash.com/featured/?house' %>" class="card-img-top" alt="Listing image" style="height: 250px; object-fit: cover;">
            <div class="card-body">
              <p class="card-text">
                <%= listing.title %><br>
                â‚¹<%= listing.price.toLocaleString("en-IN") %>/ night
                <i class="tax-info"> +18% GST</i>
              </p>
            </div>
          </div>
        </a>
      </div>
      <% } %>
    </div>
  </div>

  <script>
    document.getElementById("flexSwitchCheckDefault").addEventListener("click", () => {
      document.querySelectorAll(".tax-info").forEach(info => {
        info.style.display = info.style.display !== "inline" ? "inline" : "none";
      });
    });
  </script>
</body>
