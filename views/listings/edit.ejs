<% layout("/listings/layout/boilerplate.ejs") %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
    <h3>Update Listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT"
      novalidate class="needs-validation" enctype="multipart/form-data">

      <div class="mb-3"> 
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" value="<%= listing.title %>" placeholder="enter title" type="text" class="form-control" required />
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
        name="listing[description]"
        placeholder="enter description" class="form-control" required><%= listing.description %></textarea>
        <div class="invalid-feedback">Please enter valid description</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Image</label>
        <input
        required
        name="image"
        placeholder="enter image URL/Link"
        type="text" class="form-control">

        <div class="invalid-feedback">Please enter valid image URL</div>
      </div>

      <div class="row">
        <div class="mb-3 col-4">
        <label for="price" class="form-label">Price</label>
        <input required name="listing[price]" placeholder="enter price" type="number" class="form-control" value="<%= listing.price %>" />
        <div class="invalid-feedback">Please enter valid price</div>
      </div>
      
      <div class="mb-3 col-8">
        <label for="country" class="form-label">Country</label>
        <input required name="listing[country]" placeholder="enter country" type="text" class="form-control" value="<%= listing.country %>"/>
        <div class="invalid-feedback">Please enter valid country name</div>
      </div>
    
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
        required
        name="listing[location]"
        placeholder="enter location"
        type="text" class="form-control"
        value="<%= listing.location %>"
        />
        <div class="invalid-feedback">Please enter valid location</div>
      </div>
      
      <br>
     <button type="submit" class="btn btn-danger">Edit</button>
     <br>
    </form>
    </div>
  </div>
</div>
